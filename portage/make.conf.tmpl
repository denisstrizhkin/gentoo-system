{{- if eq .chezmoi.hostname "denis-laptop" -}}

MAKEOPTS="-j4"

{{ else -}}

MAKEOPTS="-j6"

{{ end -}}

COMMON_FLAGS="-O2 -pipe -march=native"

CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
FCFLAGS="${COMMON_FLAGS}"
FFLAGS="${COMMON_FLAGS}"

FEATURES="getbinpkg"

CPU_FLAGS_X86="aes avx avx2 f16c fma3 mmx mmxext pclmul popcnt rdrand sha sse sse2 sse3 sse4_1 sse4_2 sse4a ssse3"

VIDEO_CARDS="amdgpu radeonsi"
L10N="ru en ja"

ACCEPT_LICENSE="-* @FREE"

BINPKG_COMPRESS="zstd"
BINPKG_FORMAT="gpkg"

LC_MESSAGES=C.utf8

QEMU_USER_TARGETS="aarch64"
QEMU_SOFTMMU_TARGETS="aarch64 x86_64"

SIGNED_OFF_BY="Denis Strizhkin <strdenis02@gmail.com>"

GENTOO_MIRRORS="http://tux.rainside.sk/gentoo/ \
	ftp://tux.rainside.sk/gentoo/"
